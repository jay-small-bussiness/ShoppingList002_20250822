                                 Value="True">
                                <Setter Property="BorderColor" Value="Red" />
                            </DataTrigger>
                        </Frame.Triggers>-->
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

